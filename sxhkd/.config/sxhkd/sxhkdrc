###################
## BSPWM HOTKEYS ##
###################

# make sxhkd reload/restart its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + shift + ctrl + {q,r}
	bspc {quit,wm -r}

# close and kill
super + shift + q
	bspc node -c
alt + F4
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next
# super + shift
# 	bspc desktop -l next


# Hide polybar
super + alt + f
  polybar-msg cmd toggle

# Go full mode
super + f
    bspc node -t \~fullscreen


# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# # swap the current node and the biggest node
# super + g
# 	bspc node -s biggest


# STATE/FLAGS

# set the window state
super + shift + {i,o,p}
	bspc node -t {tiled,pseudo_tiled,floating}


# floating toggle
super + alt + space
  bspc node focused -t \~floating

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# FOCUS/SWAP

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }u
	bspc node -f {next,prev}.local


# MONITORES

# focus the next/previous desktop in the current monitor
super + {comma,dot}
	bspc desktop -f {prev,next}.local
super + shift + {comma,dot}
	bspc node -d {prev,next}.local --follow;


# focus left or right monitor
super + {Up,Down}
    bspc monitor {prev,next} -f

# # Enviar a otro monitor
super + alt + {Up,Down}
	bspc node -m {prev,next} 




# focus the last node/desktop
super + Tab
	bspc desktop -f last
alt +  Tab
  bspc node --focus next.local

# Alternar al escritorio 7 o al último escritorio activo
super + n
    ~/.config/bspwm/toggle_workspace.sh 7

# Alternar al escritorio 5 o al último escritorio activo
super + a
    ~/.config/bspwm/toggle_workspace.sh 5




# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'



# PRESELECT

# preselect the direction
super + ctrl + {Left,Down,Up,Right}

	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel


# MOVE/RESIZE

# expand a window by moving one of its side outward

super + ctrl + {h,j,k,l}
	bspc node -z {left -60 0,bottom 0 60,top 0 -60,right 60 0}
# contract a window by moving one of its side inward
super + ctrl + alt + {h,j,k,l}
	bspc node -z {right -60 0,top 0 60,bottom 0 -60,left 60 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}




