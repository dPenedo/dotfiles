[
    // Vim Normal Mode Key Bindings
    // VS CODE Shortcuts
    {
        "key": "ctrl+shift+alt+q",
        "command": "workbench.action.quit"
    },
    {
        "key": "ctrl+shift+alt+t",
        "command": "workbench.action.hideEditorTabs"
    },
    {
        "key": "alt+f8",
        "command": "-editor.action.marker.next",
        "when": "editorFocus"
    },
    {
        "key": "alt+s",
        "command": "workbench.action.debug.start",
        "when": "editorFocus"
    },
    {
        "key": "alt+t",
        "command": "workbench.view.extension.todo-tree-container"
    },
    {
        "key": "q",
        "command": "workbench.action.closeSidebar",
        "when": "explorerViewletVisible && !inputFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "explorerViewletVisible && !inputFocus"
    },
    {
        "key": "alt+f",
        "command": "workbench.action.maximizeEditorHideSidebar",
        "when": "auxiliaryBarVisible || sideBarVisible || editorPartMultipleEditorGroups && !editorPartMaximizedEditorGroup"
    }
]