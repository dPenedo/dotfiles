[
    // Vim Normal Mode Key Bindings
    // VS CODE Shortcuts
    {
        "key": "ctrl+shift+alt+q",
        "command": "workbench.action.quit"
    },
    {
        "key": "ctrl+shift+alt+t",
        "command": "workbench.action.hideEditorTabs"
    },
    {
        "key": "alt+f8",
        "command": "-editor.action.marker.next",
        "when": "editorFocus"
    },
    {
        "key": "alt+s",
        "command": "workbench.action.debug.start",
        "when": "editorFocus"
    },
    {
        "key": "alt+t",
        "command": "workbench.view.extension.todo-tree-container"
    },
    {
        "key": "q",
        "command": "workbench.action.closeSidebar",
        "when": "explorerViewletVisible && !inputFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "explorerViewletVisible && !inputFocus"
    },
    {
        "key": "alt+f",
        "command": "workbench.action.maximizeEditorHideSidebar",
        "when": "auxiliaryBarVisible || sideBarVisible || editorPartMultipleEditorGroups && !editorPartMaximizedEditorGroup"
    },
    {
        "key": "alt+c alt+p",
        "command": "github.copilot.completions.toggle",
        "when": "github.copilot.activated"
    },
    {
        "key": "shift+alt+r",
        "command": "notebook.execute",
        "when": "config.notebook.globalToolbar && !notebookHasSomethingRunning || config.notebook.globalToolbar && notebookInterruptibleKernel && !notebookHasSomethingRunning || config.notebook.globalToolbar && !notebookHasSomethingRunning && !notebookInterruptibleKernel"
    },
    {
        "key": "ctrl+shift+e",
        "command": "workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "ctrl+shift+e",
        "command": "-workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "shift+alt+space",
        "command": "workbench.action.terminal.sendSequence",
        "when": "terminalFocus && terminalShellIntegrationEnabled && !accessibilityModeEnabled && terminalShellType == 'pwsh'"
    },
    {
        "key": "alt+space",
        "command": "-workbench.action.terminal.sendSequence",
        "when": "terminalFocus && terminalShellIntegrationEnabled && !accessibilityModeEnabled && terminalShellType == 'pwsh'"
    },
    {
        "key": "alt+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+alt+h",
        "command": "workbench.action.increaseViewWidth",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "ctrl+alt+k",
        "command": "workbench.action.increaseViewHeight",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "ctrl+alt+j",
        "command": "workbench.action.decreaseViewHeight",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "ctrl+alt+l",
        "command": "workbench.action.decreaseViewWidth",
        "when": "!isAuxiliaryWindowFocusedContext"
    }
]