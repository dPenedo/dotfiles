general.import = [
    # "~/.config/alacritty/themes/themes/kanagawa_dragon.toml"
    # "~/.config/alacritty/themes/themes/everforest_dark.toml"
    # "~/.config/alacritty/themes/kanagawa_wave.toml"
    "~/.config/alacritty/themes/dayfox.toml"
]

[cursor.style]
blinking = "On"
shape = "Beam"

[cursor.vi_mode_style]
shape = "Block"

[env]
TERM = "xterm-256color"

[font]
size = 11.8

[font.normal]
family = "terminal-font"
style = "Regular"




[font.offset]
x = 0
y = 1


[window]
opacity = 0.95

[window.padding]
x = 6
y = 4

[[keyboard.bindings]]
action = "ToggleViMode"
key = "q"
mode = "Vi"
