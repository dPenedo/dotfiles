export FZF_DEFAULT_OPTS="
  --bind='ctrl-p:toggle-preview'
  --bind='ctrl-n:down,ctrl-p:up,ctrl-l:accept'
  --layout=reverse
  --info=inline
  --multi
  --color=bg:#1a1a1a,bg+:#3a3a3a,selected-bg:#45475a
  --color=spinner:#7e9cd8,info:#afaf87,prompt:#Ffa066,header:#7e9cd8
