# Opciones

set font "FiraCode 10"

set selection-clipboard clipboard
map <C-l> feedkeys ":blist <Tab>"
map <C-m> feedkeys ":bmark"

set window-title-basename "true"
set adjust-open width


# Colores
set default-bg '#1C1F26'
set statusbar-fg "#ECE1C0" 
set statusbar-bg "#1C1F26"

set notification-error-fg       "#ece1c0"
set notification-warning-fg     "#44475a"
set notification-bg             "#1c1F26"
set notification-fg             "#ece1c0"

set completion-bg               "#1c1F26"
set completion-group-bg         "#1c1F26"
set completion-highlight-bg     "#44475a"
set completion-highlight-fg     "#ece1c0"

set index-bg                    "#1c1F26"
set index-fg                    "#ece1c0"
set index-active-fg             "#ece1c0"

set inputbar-bg                 "#1c1F26"
set inputbar-fg                 "#ece1c0"

set highlight-color             "#6BA4E7"
set highlight-active-color      "#ece1c0"

set render-loading              true
set render-loading-fg           "#1c1F26"
set render-loading-bg           "#ece1c0"

#
# Recolor mode settings
#

set recolor-lightcolor          "#1f1f28"
set recolor-darkcolor           "#F1E9D2"



